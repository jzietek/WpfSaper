<Window x:Class="WpfSaper.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSaper"
        xmlns:about="clr-namespace:Gat.Controls;assembly=Gat.Controls.AboutBox"
        mc:Ignorable="d"
        Title="About" Height="350" Width="400" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <about:AboutControlView Name="aboutControlView" />
            <Button HorizontalAlignment="Right" Margin="10" Width="100" Height="32" Click="Button_Click" >Close</Button>
        </StackPanel>
    </Grid>
</Window>
